<%= render "navbar" %>
<div id="main-container" class="container">

      <div class="row">
      <div class="col-md-8">
  <% if @manifests.blank? %>
    <div class="row">
    <div class="col-md-8">
    <p>No results found</p>
    </div>
    </div>
  <% end %> 
  <% @manifests.each do |manifest| %>
  <div class="row">
      <div class="col-md-8">
        <h4><%= manifest.label %></h4>
        <p>
          <a target=”_blank” href="http://universalviewer.io/examples/?manifest=<%= manifest.manifest_id %>">
            <%= image_tag 'logo-iiif.png', :alt => 'Drag onto an IIIF client or click to open in Universal Viewer'%>
          </a>
          <%= link_to manifest.manifest_id, manifest.manifest_id %>
        </p>
        <p><%= manifest.license %></p>
        <p>
        <% manifest.description.each do |description_hash| %>
          <%= raw(description_hash["value"]) %> <br>
        <% end %>
        </p>
        <% if manifest.thumbnail %>
          <p><%= image_tag manifest.thumbnail %></p>
        <% end %>
      </div>
    </div>
    <% end %>
    </div>
    </div>
<br>

</div>